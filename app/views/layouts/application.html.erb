<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body id='store'>
  <div id='banner'>
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id='columns'>
    <div id='side'>
        <a><%= Time.new.strftime("%Y-%m-%d %H:%M:%S") %></a><br>
        <a href=''>Home</a><br>
        <a href=''>Questions</a><br>
        <a href=''>News</a><br>
        <a href=''>Contact</a><br>
    </div>
    <!-- end of side -->
    <div id='main'>
      <%= yield %>
    </div>
    <!-- end of main -->
  </div>
  <!-- end of columns -->
</body>
</html>
